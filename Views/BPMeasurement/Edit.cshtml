@model BPMeasurementViewModel

@{
    ViewData["Title"] = "Edit Measurement";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="BPMeasurement" asp-action="Edit" method="post" enctype="application/x-www-form-urlencoded">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ActiveBPData.BPMeasurementId" />

    <div class="form-group">
        <label asp-for="ActiveBPData.Systolic" class="control-label"> Systolic</label>
        <input type="number" asp-for="ActiveBPData.Systolic" class="form-control" />
    </div>

    <div class="form-group">
    <label asp-for="ActiveBPData.Diastolic" class="control-label">Diastolic</label>
        <input type="number" asp-for="ActiveBPData.Diastolic" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ActiveBPData.PositionId">Position</label>
        <select asp-for="ActiveBPData.PositionId" class="form-control">
            <option value="">Select a position...</option>
            @foreach (var p in Model.Positions)
            {
                <option value="@p.PositionId">@p.Name</option> 
            }
        </select>
    </div>


    <div class="form-group">
        <label asp-for="ActiveBPData.MeasurementDate" class="control-label"></label>
        <input asp-for="ActiveBPData.MeasurementDate" class="form-control" type="date" />
    </div>

    <input type="hidden" asp-for="ActiveBPData.BPMeasurementId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
