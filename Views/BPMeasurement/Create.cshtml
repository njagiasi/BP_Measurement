@model BPMeasurementViewModel

@{
    ViewData["Title"] = "Add BPMeasurement"; // Fallback if null
}

<form asp-controller="BPMeasurement" asp-action="Create" method="post" enctype="application/x-www-form-urlencoded">

    <div class="form-group">
        <label asp-for="ActiveBPData.Systolic" class="control-label"> Systolic</label>
        <input asp-for="ActiveBPData.Systolic" class="form-control" />
        <span asp-validation-for="ActiveBPData.Systolic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActiveBPData.Diastolic" class="control-label">Diastolic</label>
        <input asp-for="ActiveBPData.Diastolic" class="form-control" />
        <span asp-validation-for="ActiveBPData.Diastolic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActiveBPData.PositionId">Position</label>
        <!-- add a drop-down for genre options: -->
        <select asp-for="ActiveBPData.PositionId" class="form-control">
            <option value="">Select a genre..</option>
            @foreach (var p in Model.Positions)
            {
                <option value="@p.PositionId">@p.Name</option>
            }
        </select>
    </div>


    <div class="form-group">
        <label asp-for="ActiveBPData.MeasurementDate" class="control-label">Measurement Date</label>
        <input asp-for="ActiveBPData.MeasurementDate" class="form-control" id="datetimepicker" />
        <span asp-validation-for="ActiveBPData.MeasurementDate" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>


