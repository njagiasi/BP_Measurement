@model BPMeasurementApp.Entities.BPMeasurement

@{
    ViewData["Title"] = "Delete Measurement";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this measurement?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Systolic)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Systolic)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Diastolic)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Diastolic)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MeasurementDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MeasurementDate)
        </dd>
    </dl>
</div>

<form asp-controller="BPMeasurement"  asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BPMeasurementId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="BPMeasurement" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
